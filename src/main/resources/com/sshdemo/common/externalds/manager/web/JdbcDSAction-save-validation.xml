<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
	<field name="jdbcDSVo.name">
		<field-validator type="requiredstring">
			<message>必须输入名称</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">10</param>
			<message>名称不能大于${maxLength}个字符</message>
		</field-validator>
	</field>
	<field name="jdbcDSVo.userName">
		<field-validator type="requiredstring">
			<message>必须输入用户名</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">40</param>
			<message>用户名不能大于${maxLength}个字符</message>
		</field-validator>
	</field>
	<field name="jdbcDSVo.driver">
		<field-validator type="requiredstring">
			<message>必须输入驱动名</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">40</param>
			<message>驱动名不能大于${maxLength}字符</message>
		</field-validator>
	</field>
	<field name="jdbcDSVo.connUrl">
		<field-validator type="requiredstring">
			<message>必须输入数据库连接URL</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">40</param>
			<message>数据库连接URL不能大于${maxLength}字符</message>
		</field-validator>
	</field>
</validators>